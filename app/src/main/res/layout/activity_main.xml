<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorRed"
    android:layout_gravity="center_horizontal"
    tools:context=".MainActivity">

   <GridLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:columnCount="3"
       android:rowCount="2">

       <Button
           android:id="@+id/btnarea"
           style="@style/button"
           android:layout_width="121dp"
           android:text="Area of Circle"
           android:textSize="15sp" />


       <Button
           android:id="@+id/btnpalindrome"
           style="@style/button"
           android:layout_width="147dp"
           android:text="Palindrome Number"
           android:textSize="15sp" />

       <Button
           android:id="@+id/btnSI"
           style="@style/button"
           android:layout_width="115dp"
           android:text="Simple interest "
           android:textSize="15sp" />

       <Button
           android:id="@+id/btnarmstrong"
           style="@style/button"
           android:layout_width="130dp"
           android:text="Armstrong Number" />

       <Button
           android:id="@+id/btnautomorphic"
           style="@style/button"
           android:layout_width="144dp"

           android:text=" Automorphic Number" />

       <Button
           android:id="@+id/btnswapping"
           style="@style/button"
           android:layout_width="121dp"
           android:text="Swapping Number" />



   </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/fragmentContainer">

    </LinearLayout>

</LinearLayout>
